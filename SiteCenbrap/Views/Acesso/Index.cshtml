<div class="col-md-offset-1 col-md-10 col-xs-offset-1 col-xs-10">
    <h2>Portal do aluno</h2>
    <div class="form-horizontal">
        <div class="form-group">
            <input type="text" class="form-control" id="portal-login" placeholder="Usuário" />
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="portal-senha" placeholder="Senha" />
        </div>
        <div class="form-group">
            <button class="btn btn-ok" type="button" id="portal-entrar">Entrar</button>
        </div>
        <div class="col-md-12 col-xs-12 form_erro">
            <div id="portal-erro"></div>
            <div class="clearfix"></div>
            <div id="portal-msg">Obs.: utilize seu primeiro nome como <strong>login</strong> e somente os números do seu CPF como <Strong>senha</Strong>.</div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/Portal")
