<div class="row cursos-banner" codigo="@Model.curso.titulo_curso.codigo" cidade="@Model.curso.cidade_codigo.codigo">
    <div class="container">

        <h1 class="white">
            @Model.curso.titulo
            @if (Model.curso.tipo != 2)
            {
                <label>(* curso presencial)</label>
            }
            else
            {
                <label>(* 100% online - Carga horária @Model.curso.carga_horaria.ToString()h)</label>
            }
        </h1>

        @if (@Model.curso.vagas_esgotadas == 1)
        {
            if ((Model.curso.codigo == 454) || (Model.curso.codigo == 464))
            {
                <a href="/Turma/IME14SAO/" class="btn btn-pos">VAGAS ESGOTADAS<br />CLIQUE AQUI E MATRICULE-SE NA PRÓXIMA TURMA</a>
            }
            else
            {
                if (Model.curso.codigo == 406)
                {
                    <a href="/Turma/PS5RIO/" class="btn btn-pos">VAGAS ESGOTADAS<br />CLIQUE AQUI E MATRICULE-SE NA PRÓXIMA TURMA</a>
                }
                else
                {
                    if (Model.curso.codigo == 407)
                    {
                        <a href="/Turma/PS7BHZ/" class="btn btn-pos">VAGAS ESGOTADAS<br />CLIQUE AQUI E MATRICULE-SE NA PRÓXIMA TURMA</a>
                    }
                    else
                    {
                        <a href="/Inscreva/@Model.curso.titulo1/" class="btn btn-pos">VAGAS ESGOTADAS<br />ENTRAR NA LISTA DE ESPERA?</a>
                    }
                }

            }
        }
        else
        {
            if (Model.qtd >= Model.curso.total_alunos)
            {
                <a href="/Inscreva/@Model.curso.titulo1/" class="btn btn-pos margin-top-50">VAGAS ESGOTADAS<br />ENTRAR NA LISTA DE ESPERA?</a>
            }
            else
