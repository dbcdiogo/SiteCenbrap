@model SiteCenbrap.Models.CursoView
@{
    ViewBag.Title = Model.curso.titulo;
    ViewBag.Title = Model.curso.titulo;
    ViewBag.Image = "http://cenbrap.com.br/Cursos/banner/" + @Model.titulo_curso.codigo;
}

@* Redireciona para página inicial caso o opção visualiza no site seja 'não'*@
@if (Model.curso.visualiza_site == 0)
{
    Response.Redirect(Url.Action("Index", "Home"));
}

@* Redireciona para página inicial caso a data_fim do curso seja menor que a data atual*@
@if (Model.curso.data_fim.Year != 1900)
{
    if (Convert.ToInt32(((Model.curso.data_fim - DateTime.Now).TotalDays)) < 0)
    {
        Response.Redirect(Url.Action("Index", "Home"));
    }
}

<div class="col-md-12 col-xs-12 compartilhe2" style="text-align:right">
    <span>
        <a data-site="" href="#" onClick="CopyLink()"><img src="~/Images/share.png" title="Copiar link" alt="Copiar link"></a>
